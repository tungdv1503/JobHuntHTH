<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Employers.Fragment.Account_Employer">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/Account_employer_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:riv_corner_radius="100dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/Account_employer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/Account_employer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/Account_employer_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/Account_employer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/Account_employer_btn_edit"
        android:text="@string/edit_account"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:background="@color/Account_employer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>