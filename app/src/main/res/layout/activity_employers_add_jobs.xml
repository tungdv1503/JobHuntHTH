<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Employers.Employers_AddJobs">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/jobAd_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_JobTitle"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edt_Title"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edt_JobTitle"
            android:autofillHints="" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_JobDesc"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edt_JobDesc"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edt_JobDesc"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_JobReq"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edt_Jobreq"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edt_JobReq"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_JobPerk"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edt_JobPerk"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edt_JobPerk"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_JobProfession"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/spn_JobProfession"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_JobType"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/spn_Jobtype"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"/>

        <Button
            android:layout_marginTop="16dp"
            android:id="@+id/btn_AddJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="16dp"
            android:text="@string/btn_AddJob"/>

    </LinearLayout>

</LinearLayout>