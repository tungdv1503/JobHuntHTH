<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_salary.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="16dp"
        android:id="@+id/input_layout_min_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min Salary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_min_salary"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="16dp"
        android:id="@+id/input_layout_max_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Max Salary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_max_salary"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:layout_marginTop="16dp"
        android:id="@+id/radio_group_salary_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_vnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="VND" />

        <RadioButton
            android:id="@+id/radio_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD" />

    </RadioGroup>

</LinearLayout>

